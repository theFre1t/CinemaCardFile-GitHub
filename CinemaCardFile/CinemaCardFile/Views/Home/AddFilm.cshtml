@model Film
@{
    ViewData["Title"] = "Добавление фильма";
}

<form asp-action="AddFilm" method="post" enctype="multipart/form-data" class="card p-3">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="Descrpion" class="control-label">Описание</label>
        <textarea asp-for="Descrpion" rows="3" class="form-control"></textarea>
        <small class="form-text text-muted">
            Допустимое размер текста - 1000 символов.
        </small>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Год выпуска</label>
        <select asp-for="Year" class="custom-select" required>
            <option selected>Выберите год выпуска</option>
            @for (int i = 1888; i <= 2030; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Producer" class="control-label">Режиссер</label>
        <input type="text" asp-for="Producer" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="Username" class="control-label">Имя пользователя</label>
        <input type="text" asp-for="Username" class="form-control" required>
    </div>
    <div class="custom-file mt-3">
        <input type="file" class="custom-file-input" asp-for="Poster" id="customFile">
        <label class="custom-file-label" for="customFile">Загрузите постер</label>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Отправить" class="btn btn-outline-success float-right" />
    </div>
</form>
